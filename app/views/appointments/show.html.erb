<p id="notice"><%= notice %></p>

<div class="container">
  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th colspan="2"><center>Appointment Details</center></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><strong>Patient:</strong></td>
        <td><%= @appointment.patient_id %></td>
      </tr>

      <tr>
        <td><strong>Specializatuion:</strong></td>
        <td><%= @appointment.specialization_id %></td>
      </tr>

      <tr>
        <td><strong>Doctor:</strong></td>
        <td><%= @appointment.doctor_id %></td>
      </tr>

      <tr>
        <td><strong>Appointment date:</strong></td>
        <td><%= @appointment.appointment_date %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="mb-4 mt-2"> 
  <%= link_to 'Edit', edit_appointment_path(@appointment), class: "btn btn-secondary btn-sm" %> |
  <%= link_to 'Back', appointments_path, class: "btn btn-info btn-sm" %>
</div>
