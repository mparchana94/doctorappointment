<p id="notice"><%= notice %></p>

<h1>Doctors</h1>

<table>
  <div class="container">           
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Age</th>
          <th>Email</th>
          <th>Specialization</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @doctors.each do |doctor| %>
          <tr>
            <td><%= doctor.name %></td>
            <td><%= doctor.age %></td>
            <td><%= doctor.email %></td>
            <td><%= doctor.specialization.try(:name) %></td>
            <td><%= link_to 'Show', doctor, class: "btn btn-success btn-sm" %></td>
            <td><%= link_to 'Edit', edit_doctor_path(doctor), class: "btn btn-secondary btn-sm" %></td>
            <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</table>

