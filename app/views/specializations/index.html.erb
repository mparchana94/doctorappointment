<p id="notice"><%= notice %></p>

<h1>Specializations</h1>

<table>
  <div class="container">           
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @specializations.each do |specialization| %>
          <tr>
            <td><%= specialization.name %></td>
            <td><%= link_to 'Show', specialization, class: "btn btn-success btn-sm" %></td>
            <td><%= link_to 'Edit', edit_specialization_path(specialization), class: "btn btn-secondary btn-sm" %></td>
            <td><%= link_to 'Destroy', specialization, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</table>

<br>

<%= link_to 'New Specialization', new_specialization_path, class: "btn btn-primary" %>

<div class="mb-4 mt-2"> 
  <%= link_to 'Back', welcome_index_path, class: "btn btn-secondary btn-sm" %>
</div>
